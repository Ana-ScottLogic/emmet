{
  "version": 1,
  "globals": {
    "markup": {
      "profile": {
        "tagCase": "upper",
        "attributeCase": "upper"
      },
      "options": {
        "comment": {
          "enabled": true
        },
        "jsx": true,
        "bem": {
          "element": "_el",
          "modifier": "-mod"
        }
      },
      "variables": {
        "lang": "ru",
        "foo": "bar"
      },
      "snippets": {
        "a": "a[href title]",
        "list": "ul>li.item"
      }
    },
    "stylesheet": {
      "profile": {
        "tagCase": "upper",
        "format": false
      },
      "snippets": {
        "gd": "grid"
      },
      "options": {
        "shortHex": true,
        "between": ":"
      }
    }
  },
  "syntax": {
    "angular": {
      "type": "markup",
      "options": {
        "comment": {
          "enabled": false
        }
      },
      "profile": {
        "tagCase": "lower",
        "attributeCase": "upper"
      },
      "snippets": {
        "sw": "div[[ngSwitch]]"
      }
    },
    "sugarss": {
      "type": "stylesheet",
      "options": {
        "between": " ",
        "after": ""
      },
      "snippets": {
        "foo": "bar"
      }
    }
  },
  "project": {
    "proj1": {
      "globals": {
        "markup": {
          "profile": {
            "tagCase": "upper",
            "format": false
          },
          "snippets": {
            "p1s": "div.proj1-snippet"
          }
        },
        "stylesheet": {
          "snippets": {
            "gd": "baz"
          }
        }
      }
    }
  }
}
